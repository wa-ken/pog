<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>総修得賞金</th>
      <th>馬情報</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.sum_rewards %></td>
        <td><ul><% user.user_horses.each do |data| %>
          <% if data.horse.present? %>
            <li><%= data.horse.name %></li>
          <% end %>
        <% end %>
        </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

