<% @users.each.with_index do |user, i| %>
  <div class="user">
    <p class="rank"><%= i+1 %>位</p>
    <p><%= user.name %>
    <span class="user-reward"><%= number_to_currency(user.sum_rewards, {:unit => "", :precision => 0 }) %>万円</span></p>
    <p class="horses"><ul>
      <% user.horses.each do |data| %>
        <% if data.horse.present? %>
          <li class="user-horse"><%= link_to data.horse.name, horse_path(data) %></li>
        <% end %>
      <% end %>
    </ul></p>
  </div>
  <div class="line"></div>
<% end %>


